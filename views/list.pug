h4="Meus vídeos"
#user-videos
    form#inputs-user-videos.row(method="POST" action="/dashboard")    
        .col-3
            .input-group
                input#busca-cidade(type='text' name='cidade' placeholder="Digite a cidade" value=cidade?cidade.nome:"").form-control.form-control-sm
                .input-group-append
                        i.input-group-text.fas.fa-search
        .col-3
            .input-group
                if redes
                    select#rede_id(type='text' name='rede_id' required).form-control.form-control-sm
                        option#oxe(value="" selected)="Rede"
                            each r in redes
                                option(value=r.id selected=r.id ==rede.id) #{r.descricao}
                    .input-group-append
                        i.input-group-text.fas.fa-search
        .col-3
            .input-group
                input#busca-escola(type='text' name='escola' placeholder="Digite a escola" value=escola?escola.nome:"" readonly=!cidade).form-control.form-control-sm
                .input-group-append
                        i.input-group-text.fas.fa-search
        .col-3
            .row
            .input-group
                input.form-control.form-control-sm#pesquisar(name="busca" placeholder="Pesquisar termos" value=busca?busca:"")
                .input-group-append
                    i.input-group-text.fas.fa-search
            input#busca-cidade-id(type='hidden' name='cidade_id' value=cidade?cidade.id:"")        
            input#busca-escola-id(type='hidden' name='escola_id' value=escola?escola.id:"")
            input(type="submit" style="display:none")                
    .row
        if videos.length
            each video in videos
                .col-3
                    .video(style="background-image: url("+video.thumb+")" onclick="visualizarVideoDashboard("+video.id+")")
                        .preview
                            form(method='POST' action='/delete/videos')
                                input.d-none(name="id", value=video.id) 
                                i.fa.fa-play
                                i.fas.fa-trash(onclick="deleteVideo(event)")
        else
            .container 
                p.no-video="Nenhum vídeo encontrado"