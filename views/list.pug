h4="Meus vídeos"
#user-videos
    form#inputs-user-videos.row(method="POST" action="/dashboard") 
        .col-md-auto.align-self-center
            span
                b="FILTROS"   
        .col-2
            .input-group
                select#busca-cidade(name='cidade_id' placeholder="Cidade" value=cidade.id).form-control.form-control-sm
        .col-2
            .input-group
                if redes
                    select#busca-rede(type='text' name='rede_id' value=rede.id).form-control.form-control-sm
                        option(value="" selected)="Rede"
                            each r in redes
                                option(value=r.id selected=r.id ==rede.id) #{r.descricao}
        .col-3
            .input-group
                select#busca-escola(name='escola_id' placeholder="Digite a escola" value=escola.id readonly=!cidade).form-control.form-control-sm
        .col
            .row
            .input-group
                input.form-control.form-control-sm#pesquisar(name="busca" placeholder="Pesquisar termos" value=busca?busca:"")
                .input-group-append
                    i.input-group-text.fas.fa-search
            input(type="submit" style="display:none")                
    .row
        if videos.length
            each video in videos
                .col-3
                    .video(style="background-image: url("+video.thumb+")" onclick="visualizarVideoDashboard("+video.id+")")
                        .preview
                            form(method='POST' action='/delete/videos')
                                input.d-none(name="id", value=video.id) 
                                i.fa.fa-play
                                i.fas.fa-trash(onclick="deleteVideo(event)")
        else
            .container 
                p.no-video="Nenhum vídeo encontrado"