p.title=list.title
div#list-menu.row.nav-tabs
    ul.nav
        li
            button.active(data-toggle='tab', href='#user-videos').btn.btn-outline-secondary.btn-sm="Meus v√≠deos"
        li
            button(data-toggle='tab', href='#trash').btn.btn-outline-secondary.btn-sm="Lixeira"
    select.form-control.form-control-sm.col-3(name="turmas")
        option="Turmas"
    input.form-control.form-control-sm.col-4.search(type="text")(placeholder="Pesquisar")

#myTabContent.tab-content
    #user-videos.tab-pane.fade.show.active
        div.list-videos.row
            each video in videos
                .col-3.m-2.p-0
                    .video
                        iframe(type='text/html' style="border-radius: 10px" width='100%' height='100%' src=video.url controls='' frameborder='0')
                        form(method='POST' action='/delete/videos')
                            input.hidden(name="id", value=video.id)
                            input(type='submit',value='Apagar',data-transition='fade', data-theme='c')
                        
                    
    #trash.tab-pane.fade
        div.list-videos.row
            each video in videos
                .col-3
                    .video
                        i.fas.fa-link
                        i.fas.fa-play
                        i.fas.fa-pen
