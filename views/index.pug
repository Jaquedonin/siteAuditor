extends layout.pug
block content
    body#page-top
    header
        nav.navbar.navbar-expand-lg.navbar-dark.bg-dark.navbar-fixed-top
            .container
                a.navbar-brand.js-scroll-trigger(href='#page-top') Mapa da Paraíba Colaborativo
                button.navbar-toggler.collapsed(type='button', data-toggle='collapse', data-target='#navbar', aria-expanded='false', aria-controls='navbar', aria-label='Toggle navigation')
                    span.sr-only Toggle navigation
                    span.navbar-toggler-icon
                #navbar.collapse.navbar-collapse
                    ul.navbar-nav.ml-auto
                        li.nav-item
                            a.nav-link.js-scroll-trigger(href='#contact') Sobre
                        li.nav-item#login
                            if user
                                a.nav-link(href="/dashboard") 
                                    span Painel de gerenciamento
                            else
                                a.nav-link(href='/auth') Login
                        li.nav-item(style="height:2rem")
                            img(style="height:100%; margin: 8px;" src="images/logo_tce.png")
    section
      .container
        include mapa.pug
        div#galery
            div.d-flex.flex-column.align-content-stretch
                div#close-cidade.fas.fa-times
                p.section Cidade
                h2#nome-municipio
                p.section Estatísticas
                .row.text-white.text-center
                    .col-4 
                        p="Colaboradores"
                        p="0"
                    .col-4 
                        p="Vídeos"
                        p="0"    
                    .col-4 
                        p="Escolas"
                        p="0"
                p.section Vídeos 
                #videos
                    .video
                        i.fas.fa-play
                    .video
                        i.fas.fa-play
                    .video
                        i.fas.fa-play
                    .video
                        i.fas.fa-play
                    .video
                        i.fas.fa-play
                    .video
                        i.fas.fa-play
                    .video
                        i.fas.fa-play
    include modal-videos.pug
    