extends layout.pug
block content
    body#page-top
    header
        nav.navbar.navbar-expand-lg.navbar-dark.bg-dark.navbar-fixed-top
            .container
                a.navbar-brand.js-scroll-trigger(href='#page-top') Mapa da Paraíba Colaborativo
                button.navbar-toggler.collapsed(type='button', data-toggle='collapse', data-target='#navbar', aria-expanded='false', aria-controls='navbar', aria-label='Toggle navigation')
                    span.sr-only Toggle navigation
                    span.navbar-toggler-icon
                #navbar.collapse.navbar-collapse
                    ul.navbar-nav.ml-auto
                        li.nav-item
                            a.nav-link.js-scroll-trigger(href='#contact') Sobre
                        li.nav-item#login
                            if user
                                a.nav-link(href="/dashboard") 
                                    span Painel de gerenciamento
                            else
                                a.nav-link(href='/auth') Login
                        li.nav-item(style="height:2rem")
                            img(style="height:100%; margin: 8px;" src="images/logo_tce.png")
    section#mapa-wrapper
      .container
        .navbar#mapa-nav.row
            select#select-cidade(type='text' name='codigo').col-4.form-control.form-control-sm
                option(value="") Municípios
                if cidades
                    each cidade in cidades
                        if cidades
                            each cidade in cidades 
                                option(value=cidade.codigo) #{cidade.nome}
            #zoom.col-1
                div 
                    #zoom-in(onclick="zoomIn()") +
                    #zoom-out(onclick="zoomOut()") -
        include mapa.pug
        div#galery
    include modal-videos.pug
    script(type='text/javascript', src='javascripts/mapa.js')