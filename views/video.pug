script.
    var modal_dialog = $("#visualizar-video .modal-dialog");
    var modal_video =  $("#visualizar-video");
    $('.close').click(function() { modal_dialog.remove(); modal_video.modal('hide'); });
    
.modal-dialog.modal-lg(role='document')
    .modal-content
        .modal-header
            h5.modal-title=video.titulo
            button.close(type='button',data-dismiss='modal', aria-label='Close')
                span(aria-hidden='true') ×
        .modal-body
            iframe(type='text/html' width='800px' height='500px' src=encodeURI(video.url) controls='' frameborder='0')
            div.views="Visualizações: "
                span=video.views
            p=video.descricao