.modal-lg(role='document')
    .modal-dialog
        .modal-content
            .modal-header
                h5.modal-title=video.titulo
                button.close(type='button', data-dismiss='modal',aria-hidden='true', aria-label='Close')
                    span(aria-hidden='true') ×
            .modal-body
                iframe(type='text/html' width='800px' height='500px' src=encodeURI(video.url) controls='' frameborder='0')
                div.views="Visualizações: "
                    span=video.views
                p=video.descricao